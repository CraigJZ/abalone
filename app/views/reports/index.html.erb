<section class="section">
  <div class="container">
    <h1 class="title">Reports</h1>

    <div class="abalone-chart">
      <%= render_report 'total_animals_by_cohort',
                        context_params: { organization_id: current_user.organization_id },
                        actions: [] do |report| %>
        <%= report.form do |f| %>
          <div>
            <%= f.multi_autocomplete :cohort, placeholder: 'Cohort...' %>
            <%= f.date_range :created_at %>
          </div>
        <% end %>
        <div class="reports_kit_actions">
          <%= report.export_csv_button 'Download CSV', class: 'button-primary' %>
          <%= report.export_xls_button 'Download Excel', class: 'button-primary' %>
        </div>
      <% end %>
    </div>

    <div class="tabs is-centered is-boxed">
      <ul>
        <li id="spawning-chart">
          <a>
            <span class="icon is-small"><i class="fas fa-birthday-cake" aria-hidden="true"></i></span>
            <span>Spawning</span>
          </a>
        </li>
        <li id="production-chart">
          <a>
            <span class="icon is-small"><i class="fas fa-cog" aria-hidden="true"></i></span>
            <span>Production</span>
          </a>
        </li>
        <li id="mortality-chart">
          <a>
            <span class="icon is-small"><i class="fas fa-skull" aria-hidden="true"></i></span>
            <span>Mortality</span>
          </a>
        </li>
        <li id="growth-chart" class="is-active">
          <a>
            <span class="icon is-small"><i class="fas fa-ruler-vertical" aria-hidden="true"></i></span>
            <span>Growth</span>
          </a>
        </li>
      </ul>
    </div>
  </div>
</section>

<section class="section">
  <div class="container box">
    <div id="chart" class="" style="width:100%; height:400px;"></div>
  </div>
</section>